@{
    // make a list of senders we know, indexed by phone number
    var people = new Dictionary<string, string>() { 
        {"+14158675309","Curious George"},
        {"+14158675310","Boots"},
        {"+15146864237","Kad"},
        {"+14158675311","Virgil"}
    };
 
    // if the caller is known, then greet them by name
    // otherwise, consider them just another monkey
    string name = "";
    if (!string.IsNullOrEmpty(Request["From"]))
    {
        name = people[Request["From"]];
    }
 
    // now greet the caller
    Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8"?>
<Response>
    <Gather timeout="4" numDigits="3" action="http://gssaa.azurewebsites.net/hello-monkey-handle-key.cshtml" method="POST">
        <Say voice="woman">
            Welcome to Grid Show Systems @name.
            
            If you know the extension of the person you wish to reach, please enter it now.
        </Say>
    </Gather>
    <Gather numDigits="1" action="http://gssaa.azurewebsites.net/hello-monkey-handle-key.cshtml" method="POST">
        <Say voice="woman">
            For our contact information, press 1.
            For sales, press 2.
            For service, press 3.
            For technical support, press 4.
            For any other topic, press 0.
        </Say>
    </Gather>
</Response>
